<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingTop="50dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.exadigital.voterregistration.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/holo_green_dark">


    <TextView
        android:text="Population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewPopulation" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextPopulation"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textAlignment="textEnd"
        android:autoText="false"
        android:background="#8c9eff"
        android:layout_gravity="left" />

    <TextView
        android:text="Number of kits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewNumberofkits"
        android:singleLine="false"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextNumberofKits"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="#8c9eff"
        android:layout_gravity="left"
        android:textAlignment="textEnd"/>

    <TextView
        android:text="Registration time (minutes)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewRegistrationTime"
        android:singleLine="false"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextRegistrationTime"
        android:textColor="#ffffff"
        android:editable="true"
        android:background="#8c9eff"
        android:textSize="17sp"
        android:textAlignment="textEnd"
        android:layout_gravity="left" />

    <TextView
        android:text="Working hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewWorkingHours"
        android:singleLine="false"
        android:layout_marginTop="14dp"
        android:paddingTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextWorkingHours"
        android:textColor="#ffffff"
        android:editable="true"
        android:background="#8c9eff"
        android:textSize="17sp"
        android:layout_gravity="left"
        android:textAlignment="textEnd"/>


    <TextView
        android:text=" Registration Centres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewRegistrationCentres"
        android:singleLine="false"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRegistrationCentres"
        android:textColor="#ffffff"
        android:editable="true"
        android:background="#8c9eff"
        android:textSize="17sp"
        android:textAlignment="textEnd"
        android:layout_gravity="left" />

    <TextView
        android:text="Cost per kit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/textViewCostperkit"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextCostPerKit"
        android:textColor="#ffffff"
        android:editable="true"
        android:background="#8c9eff"
        android:textSize="17sp"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewRegistered"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewRegisterdPDayPKIT"
        android:textAlignment="textEnd"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewNumberofDays"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewNumberofKitsPRegistration"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewDaysinEachRegistrationCentre"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textViewTotalCost"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:id="@+id/textView12CostPPerson"
        android:paddingLeft="5dp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>